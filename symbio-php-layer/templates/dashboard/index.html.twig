{% extends 'base.html.twig' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <!-- Language Switcher -->
    <div class="d-flex justify-content-end mb-3">
        <div class="btn-group" role="group" aria-label="Language switcher">
            <a href="{{ path('app_set_locale', {'locale': 'ru'}) }}" class="btn btn-outline-primary btn-sm{% if app.request.locale == 'ru' %} active{% endif %}">RU</a>
            <a href="{{ path('app_set_locale', {'locale': 'en'}) }}" class="btn btn-outline-primary btn-sm{% if app.request.locale == 'en' %} active{% endif %}">EN</a>
        </div>
    </div>

    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white shadow">
                <div class="card-body text-center py-4">
                    <h1 class="display-5 mb-2"><i class="bi bi-house-door"></i> {{ 'dashboard.heading'|trans }}</h1>
                    <p class="lead mb-0">{{ 'dashboard.welcome_message'|trans }}</p>
                </div>
            </div>
        </div>
    </div>

    {% if message %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <!-- === BTC Wallet Section === -->
    {% if walletBtcInfo %}
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> Bitcoin (BTC)</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h6 class="text-muted">{{ 'dashboard.wallet.address'|trans }}</h6>
                            <code class="small">{{ walletBtcInfo.address|default('N/A') }}</code>
                        </div>
                        <div class="col-6">
                            <h6 class="text-muted">{{ 'dashboard.wallet.balance'|trans }}</h6>
                            <span class="fw-bold text-success">{{ walletBtcInfo.balance|default('0.00000000') }} BTC</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- BTC Send -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-send"></i> {{ 'dashboard.send_btc'|trans }}</h5>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <input type="hidden" name="send_btc" value="1">
                        <div class="mb-3">
                            <label for="to_btc" class="form-label">{{ 'dashboard.send_to'|trans }}</label>
                            <input type="text" class="form-control" id="to_btc" name="to_btc" required placeholder="bc1q...">
                        </div>
                        <div class="mb-3">
                            <label for="amount_btc" class="form-label">{{ 'dashboard.send_amount'|trans }}</label>
                            <div class="input-group">
                                <input type="number" step="0.00000001" min="0" class="form-control" id="amount_btc" name="amount_btc" required placeholder="0.00000000">
                                <span class="input-group-text">BTC</span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-send"></i> {{ 'dashboard.send_button'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- === XMR Wallet Section === -->
    {% if walletXmrInfo %}
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> Monero (XMR)</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h6 class="text-muted">{{ 'dashboard.wallet.address'|trans }}</h6>
                            <code class="small">{{ walletXmrInfo.address|default('N/A') }}</code>
                        </div>
                        <div class="col-6">
                            <h6 class="text-muted">{{ 'dashboard.wallet.balance'|trans }}</h6>
                            <span class="fw-bold text-warning">{{ walletXmrInfo.balance|default('0.000000000000') }} XMR</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- XMR Send -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-send"></i> {{ 'dashboard.send_xmr'|trans }}</h5>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <input type="hidden" name="send_xmr" value="1">
                        <div class="mb-3">
                            <label for="to_xmr" class="form-label">{{ 'dashboard.send_to'|trans }}</label>
                            <input type="text" class="form-control" id="to_xmr" name="to_xmr" required placeholder="48... (XMR address)">
                        </div>
                        <div class="mb-3">
                            <label for="amount_xmr" class="form-label">{{ 'dashboard.send_amount'|trans }}</label>
                            <div class="input-group">
                                <input type="number" step="0.000000000001" min="0" class="form-control" id="amount_xmr" name="amount_xmr" required placeholder="0.000000000000">
                                <span class="input-group-text">XMR</span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="bi bi-send"></i> {{ 'dashboard.send_button'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if sendResult %}
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> {{ 'dashboard.send_result'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded">{{ sendResult }}</pre>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if isAdmin %}
    <div class="row mb-4">
        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
            <a href="{{ path('app_admin') }}" class="btn btn-outline-danger w-100">
                <i class="bi bi-shield"></i> {{ 'dashboard.link.admin'|trans }}
            </a>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
            <a href="{{ path('app_admin_tickets') }}" class="btn btn-outline-danger w-100">
                <i class="bi bi-ticket-detailed"></i> {{ 'dashboard.link.admin_tickets'|trans }}
            </a>
        </div>
    </div>
    {% endif %}
    <!-- Freelance System -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-briefcase"></i> {{'frelancesystem'|trans}}</h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="{{ path('tasks') }}" class="btn btn-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                                <i class="bi bi-list-task display-4 mb-2"></i>
                                <span class="fw-bold">{{'dashboard.all_tasks'|trans}}</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="{{ path('tasks', {'status': 'open'}) }}" class="btn btn-success w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                                <i class="bi bi-search display-4 mb-2"></i>
                                <span class="fw-bold">{{'dashboard.search_work'|trans}}</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="{{ path('task_create') }}" class="btn btn-info w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                                <i class="bi bi-plus-circle display-4 mb-2"></i>
                                <span class="fw-bold">{{'dashboard.create_task'|trans}}</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="{{ path('disputes') }}" class="btn btn-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                                <i class="bi bi-exclamation-triangle display-4 mb-2"></i>
                                <span class="fw-bold">{{'disputes'|trans}}</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-link-45deg"></i> {{ 'dashboard.quick_links'|trans }}</h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="{{ path('app_profiles') }}" class="btn btn-outline-primary w-100">
                                <i class="bi bi-people"></i> {{ 'dashboard.link.profiles'|trans }}
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="{{ path('app_profile') }}" class="btn btn-outline-primary w-100">
                                <i class="bi bi-person"></i> {{ 'dashboard.link.profile'|trans }}
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="{{ path('app_ticket') }}" class="btn btn-outline-primary w-100">
                                <i class="bi bi-ticket"></i> {{ 'dashboard.link.tickets'|trans }}
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="{{ path('app_chat') }}" class="btn btn-outline-primary w-100">
                                <i class="bi bi-chat"></i> {{ 'dashboard.link.chats'|trans }}
                            </a>
                        </div>
                        {% if isAdmin %}
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <a href="{{ path('app_admin') }}" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-shield"></i> {{ 'dashboard.link.admin'|trans }}
                                </a>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <a href="{{ path('app_admin_tickets') }}" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-ticket-detailed"></i> {{ 'dashboard.link.admin_tickets'|trans }}
                                </a>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <a href="{{ path('admin_disputes') }}" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-exclamation-triangle"></i> {{'dashboard.admin_dispute_control'|trans}}
                                </a>
                            </div>
                        {% endif %}
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-box-arrow-right"></i> {{ 'dashboard.link.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

