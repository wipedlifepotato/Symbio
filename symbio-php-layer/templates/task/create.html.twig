{% extends 'base.html.twig' %}

{% block title %}{{ 'task.create'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-circle"></i> {{ 'task.create'|trans }}</h4>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <!-- Название задачи -->
                        <div class="mb-3">
                            <label for="title" class="form-label">{{ 'task.name'|trans }} *</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <!-- Описание -->
                        <div class="mb-3">
                            <label for="description" class="form-label">{{ 'task.about'|trans }} *</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                        </div>

                        <!-- Категория -->
                        <div class="mb-3">
                            <label for="category" class="form-label">{{ 'task.category'|trans }} *</label>
                            <select class="form-select" id="category" name="category" required>
                                <option value="">{{ 'task.category'|trans }}</option>
                                {% for key, label in {
                                    'web_development': 'task.categories.web_development',
                                    'mobile_development': 'task.categories.mobile_development',
                                    'design': 'task.categories.design',
                                    'writing': 'task.categories.writing',
                                    'translation': 'task.categories.translation',
                                    'marketing': 'task.categories.marketing',
                                    'other': 'task.categories.other'
                                } %}
                                    <option value="{{ key }}">{{ label|trans }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Бюджет и валюта -->
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="budget" class="form-label">{{ 'task.budget'|trans }} *</label>
                                    <input type="number" class="form-control" id="budget" name="budget"
                                           step="0.00000001" min="0" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="currency" class="form-label">{{'task.currency'|trans}}</label>
                                    <select class="form-select" id="currency" name="currency">
                                        <option value="BTC">Bitcoin (BTC)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Срок выполнения -->
                        <div class="mb-3">
                            <label for="deadline" class="form-label">{{ 'task.deadline'|trans }} *</label>
                            <input type="datetime-local" class="form-control" id="deadline" name="deadline" required>
                        </div>

                        <!-- Кнопки -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('tasks') }}" class="btn btn-secondary me-md-2">{{ 'form.cancel'|trans }}</a>
                            <button type="submit" class="btn btn-primary">{{ 'task.create_button'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

